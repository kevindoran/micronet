settings {
    nodaemon = true, -- Run in foreground.
}
-- "tensorflow_models" is currently ignored, however, it needs to be synced _once_.
-- I'm not sure how to enable a one-time copy. The syncing needs to be disabled 
-- after the first sync, as my OS doesn't have enough inode_watchers available for
-- running both the sync and other applications such as pycharm.
sync {
    default.rsyncssh,
    source="/home/k/projects/micronet",
    host="kdoran-hcpu.us-central1-f.micronet-kdoran",
    targetdir="micronet_lsyncd",
    delay=4, -- seconds to wait while aggregating. Default is 15.
    exclude={"venv", 
             ".git", 
             ".idea", 
             "*.pytest_cache*", 
             "gcloud_env",
             "tensorflow_models",
             "tensorflow_tpu"},
    delete='startup' -- Lsyncd will delete files on target when starting (if needed to keep target folder in sync with source).
}

